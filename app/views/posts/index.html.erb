<h2>投稿一覧</h2>
<table>
  <thead>
    <tr class="row">
      <th class="col-md-2">User</th>
      <th class="col-md-8">Posts</th>
      <th class="col-md-2">Command</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr class="tweet row">
        <td class="user col-md-2"><%= post.user.name %></td>
        <td class="post col-md-8"><%= post.content %></td>
        <td class="command col-md-2"><%= link_to 'Show', post_path(post) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
