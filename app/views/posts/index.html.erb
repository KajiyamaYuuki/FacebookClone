<h1>投稿一覧</h1>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Posts</th>
      <th colspan="3">Command</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr class="tweet">
        <td class="user"><%= user.name %></td>
        <td class="post"><%= post.content %></td>
        <td class="command"><%= link_to 'Show', post_path(post) %></td>
        <td class="command"><%= link_to 'Edit', edit_post_path(post), data: { confirm: 'Are you sure edit?'} %></td>
        <td class="command"><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure delete?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "新規投稿", new_post %>
