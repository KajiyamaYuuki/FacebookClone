<h2>投稿一覧</h2>
<table class="table">
  <thead>
    <tr class="row">
      <th class="col-md-1" scope="col">User</th>
      <th class="col-md-8" scope="col">Post</th>
      <th class="col-md-2" scope="col">image</th>
      <th class="col-md-1" scope="col">Command</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr class="tweet row" scope="row">
        <td class="user col-lg-1"><%= post.user.name %></td>
        <td class="post col-lg-8"><%= post.content %></td>
        <td class="post col-lg-2"><%= "(画像有り)" if post.image.present? %></td>
        <td class="command col-lg-1"><%= link_to 'Show', post_path(post) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
